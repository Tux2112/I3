font pango: Droid Sans Mono 10
font pango: Droid Sans Mono, Droid Sans Semi-Condensed 10
font pango: Droid Sans 10x

###################
# AUTOSTART STUFF #
###################

assign[title="Steam"] Steam

for_window [title="Conky"] floating enable  border 3 pixel  floating_maximum_size 500 X 500 
assign [class="Conky"] "6 : Sys-Mon"


exec conky -qc /media/N-Space/home/joe/Conky/Conky.conf/conky_3_.conf  
exec conky -qc /media/N-Space/home/joe/Conky/Conky.conf/conky_4_.conf 
exec conky -qc /media/N-Space/home/joe/Conky/Conky.conf/conky_1_.conf

for_window [class="Terminator"] floating enable border 3 pixel floating_maximum 500 X 500
assign [class="Terminator"] "6 : Sys-Mon"
exec  --no-startup-id terminator --geometry=835X1000
exec --no-startup-id volumeicon


default_orientation vertical
# workspace_layout tabbed
new_window pixel 3
new_float pixel 3
hide_edge_borders vertical
workspace_auto_back_and_forth yes
popup_during_fullscreen smart

################################
#COLORS	#border #bkgrnd #text  #
################################

set $blue  #1733A3
set $lblue #5C91AD
set $sblue #1b347d
set $black #222222
set $grayb #393e4d
set $gray2 #111111
set $dred  #87041E
set $orange #CC6510
set $white  #f4e615
set $green #3e7d1b



# colorclass <border> <background> <text>
background $lblue  
statusline $dred  


client.focused $lblue $blue $white
client.focused_inactive $lblue  $blue $lblue


focused_workspace  $lblue  
active_workspace   $lblue
inactive_workspace $orange 
urgent_workspace  $orange   

bar.focused $blue
bar.unfocused $orange 
bar.urgent $orange 

for_window [window_role="pop-up"] floating enable
# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec oblogout

bindsym $mod+F4 exec gnome-terminal -e "vim /media/N-Space/home/joe/Notes.txt"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Super+t --->Terminal
bindsym $mod+t exec --no-startup-id gnome-terminal
assign [title="Terminal"] "2 : Term"

# kill focused window
bindsym $mod+Shift+q kill

# Super+d ---> D-Menu
bindsym $mod+d exec --no-startup-id dmenu_run -l '5' -i -b -nf 'yellow' -sb 'blue' -nb 'black' 


# Super+F5 --->Medit
bindsym $mod+F5 exec --no-startup-id medit
assign [title="medit"] "8 : E-Space"


# Super+q --->X-kill
bindsym $mod+q exec --no-startup-id /usr/bin/xkill


# Super+F1 --->X-Chat
bindsym  XF86_Messenger exec --no-startup-id xchat
assign [title="XChat"] "4 : X-Chat"

# Super+F12 --->Print Screen	
bindsym $mod+F12 exec --no-startup-id /media/N-Space/home/joe/bin/screenshot.sh

bindsym  XF86_Tools exec --no-startup-id clementine 
assign [title="Clementine"] "3 : Media"

bindsym  XF86_Documents exec --no-startup-id abiword 
assign [title="abiword"] "7 : Office"

bindsym  XF86_Mail exec --no-startup-id   thunderbird   
assign [title="Thunderbird"] "7 : Office"

bindsym  XF86_HomePage exec  --no-startup-id dolphin     
assign [title="Dolphin"] "5 : FM"

bindsym  XF86_Favorites exec --no-startup-id chromium   
assign [title="Chromium"] "1 : Web"
# Audio Controls
bindsym  XF86_AudioLowerVolume exec amixer -q set Master 10%- unmute
bindsym  XF86_AudioMute  exec amixer -q set Master playback toggle
bindsym  XF86_AudioRaiseVolume exec amixer -q set Master 10%+ unmute 
bindsym $mod+u exec /media/N-Space/home/joe/bin/tog.sh



# bindsym  269025053 exec speedchrunch  --> Not working 


